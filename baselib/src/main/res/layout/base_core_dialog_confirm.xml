<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_core_shape_corner_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="2dp"
        android:scrollbars="vertical"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="16sp"
        tools:text="title" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:maxLines="10"
        android:padding="2dp"
        android:scrollbars="vertical"
        android:textColor="#333333"
        android:textSize="16sp"
        tools:text="查询申请已提交，请耐心等待！\n系统会通过消息通知您查看查询结果。" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:maxLines="10"
        android:padding="2dp"
        android:scrollbars="vertical"
        android:textColor="#999999"
        android:textSize="14sp"
        tools:text="查询申请已提交，请耐心等待！" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="#e4e4e4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="48dip"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/base_core_text_main"
            android:textSize="18sp"
            android:visibility="visible" />

        <View
            android:id="@+id/diver"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#e4e4e4"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="0dp"
            android:layout_height="48dip"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/base_core_theme_color"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>