<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_core_white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_180"
        android:src="@mipmap/base_core_ic_loadview_net_error" />

    <TextView
        android:id="@+id/tvMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_core_margin"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxWidth="@dimen/dp_300"
        android:maxLines="3"
        android:text="@string/base_core_net_error"
        android:textColor="#808080"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tvRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_core_margin"
        android:background="@drawable/base_core_shape_oval_white_theme"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_5"
        android:text="点击刷新"
        android:textColor="@color/base_core_theme_color"
        android:textSize="@dimen/base_core_margin" />

</LinearLayout>