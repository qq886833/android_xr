<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_core_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_core_toolbar_height"
        android:background="@color/base_core_theme_color">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_core_margin"
            android:src="@mipmap/base_core_ic_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="切换网络"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tvComfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_core_margin"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvInternalVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        tools:text="pub-demo-kaifa-v3.2.6-1804251452" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="http://61.164.39.67:50780/cas-app/" />

    <RadioGroup
        android:id="@+id/changeItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
